<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Closed">
    <RelativeLayout
        android:id="@+id/relone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000">

        <ImageView
            android:id="@+id/img_Toolbar_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:background="@drawable/ic_arrow_back_24px" />




        <TextView
            android:id="@+id/imageViewWallet"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/NotfificationRelativeLayout"
            android:text="00:00"
            android:textColor="#fff"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />


        <RelativeLayout
            android:id="@+id/NotfificationRelativeLayout"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/imageNotification"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_profile_red"
               />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/relone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/content_containers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/one"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/path_3"
                        android:layout_width="416.33349609375dp"
                        android:layout_height="196.33349609375dp"
                        android:layout_marginStart="-25.000244140625dp"
                        android:layout_marginLeft="-25.000244140625dp"
                        android:contentDescription="path_3"
                        android:src="@drawable/red_maroon" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/one"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical">

                    <ScrollView
                        android:id="@+id/scrollView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/one"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/five"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/one"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/customer_name"
                                    android:textSize="24sp"
                                    android:textColor="@color/shop_color"
                                    android:layout_centerHorizontal="true"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="37dp"
                                    android:text="@string/customer_name_string"
                                    android:gravity="center_horizontal" />



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/six"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:layout_below="@+id/five"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/closed_camera"
                                    android:layout_width="match_parent"
                                    android:layout_height="159dp"
                                    android:layout_weight="1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_vertical"
                                    android:contentDescription="closed"
                                    android:src="@drawable/closed" />
                                <ImageView
                                    android:id="@+id/closed_camera_open"
                                    android:src="@drawable/unnamed"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:scaleType="center"
                                    android:visibility="visible"
                                    android:layout_height="19dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/seven"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/one"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:textSize="11sp"
                                    android:textColor="@color/shop_color"
                                    android:layout_centerHorizontal="true"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="37dp"
                                    android:text="@string/capture_the_shop_to_submit_string"
                                    android:gravity="center_horizontal" />



                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/one"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.35"
                                    android:text="@string/remarks_string"/>

                                <EditText
                                    android:id="@+id/closed_remarks"
                                    android:background="@drawable/rounded_border_edittext"
                                    android:layout_width="0dp"
                                    android:layout_height="90dp"
                                    android:layout_weight="0.75"
                                    android:maxLines="5"
                                    android:layout_marginRight="10dp"
                                    android:ems="10" />

                            </LinearLayout>






                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/one"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/close_submit"
                                    android:layout_marginTop="20dp"
                                    android:layout_width="150dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/rectangle_88_shape"
                                    android:gravity="center"
                                    android:text="Submit"
                                    android:textAllCaps="false"
                                    android:textColor="#ffffff" />
                            </LinearLayout>


                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/add__customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp"
                        android:text="@string/closed__string"
                        android:textColor="@color/_bg__today_task_color"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:id="@+id/invoice"
                        android:textSize="26sp"
                        android:textColor="@color/invoice_color"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="63dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shop_string"
                        />
                </LinearLayout>



            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/dashboard_bootom_button"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/closedbutton" />
        </RelativeLayout>
    </LinearLayout>


    <include
        android:id="@+id/llProgressBar"
        android:visibility="gone"
        layout="@layout/custom_dialog"
        tools:ignore="PrivateResource" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:ems="10" />


</RelativeLayout>